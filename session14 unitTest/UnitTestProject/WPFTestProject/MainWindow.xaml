<Window x:Class="WPFTestProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTestProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <ListView Name="lvCustomer" HorizontalAlignment="Left" Height="283" Margin="71,76,0,0" VerticalAlignment="Top" Width="329">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="btnSave" Content="save customer" HorizontalAlignment="Left" Margin="71,31,0,0" VerticalAlignment="Top" Width="110" Click="btnSave_Click"/>
        <TextBox Name="txtName" HorizontalAlignment="Left" Height="23" Margin="209,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191"/>
        <Button Name="btnCount" Content="Search count" HorizontalAlignment="Left" Margin="71,377,0,0" VerticalAlignment="Top" Width="110" Click="btnCount_Click"/>
        <TextBox Name="txtSearchCount" HorizontalAlignment="Left" Height="23" Margin="209,375,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191"/>

    </Grid>
</Window>
